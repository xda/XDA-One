<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pkg="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@android:color/white"
    android:foreground="@drawable/activatable_selectable_selector"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/user_profile_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="@dimen/list_item_left_start_text_padding"
            android:layout_marginRight="16dp"
            android:layout_marginStart="@dimen/list_item_left_start_text_padding"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:text="@string/thread_title"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="14sp" />

        <com.makeramen.RoundedImageView
            android:id="@+id/avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/account_circle"
            pkg:border_color="@android:color/transparent"
            pkg:oval="true" />

        <TextView
            android:id="@+id/user_profile_list_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/user_profile_list_item_title"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="@dimen/list_item_left_start_text_padding"
            android:layout_marginRight="16dp"
            android:layout_marginStart="@dimen/list_item_left_start_text_padding"
            android:layout_marginTop="8dp"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="2"
            android:text="@string/placeholder_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="13sp"
            tools:text="@string/placeholder_text_long" />

    </RelativeLayout>
</FrameLayout>