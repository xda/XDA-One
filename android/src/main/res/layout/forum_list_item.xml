<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forum_list_item_container"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/activatable_selectable_selector"
    android:clickable="true"
    tools:context=".ui.MainActivity">

    <ImageView
        android:id="@+id/forum_list_item_subscribe"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="16dp"
        android:src="@drawable/ic_star_outline" />

    <TextView
        android:id="@+id/forum_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/forum_list_item_subscribe"
        android:gravity="center_vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="64dp"
        android:paddingTop="16dp"
        android:singleLine="true"
        android:text="@string/forums"
        android:textAppearance="?android:attr/textAppearance"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/forum_list_item_device_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="16dp"
        android:src="@drawable/ic_nav_phone" />

</RelativeLayout>