<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.One" parent="Theme.One.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.One.NavDrawer" parent="Theme.One.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.One.NavigationHeaderTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.One.NavigationSubHeaderTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="Theme.One.UsernameTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.One.PostTimeDateTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_hint_grey</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="Theme.One.ThreadUsernameTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Theme.One.ThreadTimeDateTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#343434</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CardViewStyle.Light" parent="CardView.Light">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>