<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="Theme.One.Base" parent="FrameworkRoot.Theme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="actionModeBackground">@color/actionmode_cab_background</item>
    </style>

    <style name="Theme.One" parent="Theme.One.Base" />

    <style name="Theme.One.NavDrawer" parent="Theme.One.Base" />

    <style name="Theme.One.ThreadTextAppearanceSmall" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#777</item>
    </style>

    <style name="Theme.One.CreatePostTextAppearanceSmall" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.One.NavigationHeaderTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="Theme.One.NavigationSubHeaderTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Theme.One.UsernameTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Theme.One.PostTimeDateTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_hint_grey</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Theme.One.ThreadUsernameTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Theme.One.ThreadTimeDateTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/default_secondary_text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CardViewStyle.Light" parent="CardView.Light">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Theme.One.UserProfile" parent="Theme.One" />

    <style name="Theme.One.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.One.Popup" parent="Widget.AppCompat.PopupMenu" />
</resources>